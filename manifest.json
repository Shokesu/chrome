{
  "name": "Storify",
  "description": "Official Storify.com Chrome Extension - create social media stories",
  "version": "0.7.16",
  "manifest_version": 2,
  "minimum_chrome_version": "5.0",
  "permissions": [ 
    "tabs", 
    "*://*/*", 
    "contextMenus"
  ],
  "background": { "page": "background.html" },
  "icons": {
    "16":  "img/storify-this.ico",
    "32":  "img/storify-icon-32.png",
    "48":  "img/storify-icon-48.png",
    "128": "img/storify-icon.png"
  },
  "browser_action": {
    "default_title": "Storify this page",
    "default_icon": "img/storify-icon.png"
  },
  "web_accessible_resources": [
    "css/storify-common.css",
    "css/storify-flickr.css",
    "css/storify-fyre.css",
    "css/storify-instagram.css",
    "css/storify-pinterest.css",
    "css/storify-topsy.css",
    "css/storify-youtube.css",
    "css/storifycons.css",
    "fonts/storifycons.eot",
    "fonts/storifycons.svg",
    "fonts/storifycons.ttf",
    "fonts/storifycons.woff",
    "img/storify-flickr-16.png",
    "img/storify-instagram-11.png",
    "img/storify-instagram-40.png",
    "img/storify-pinterest-10.png",
    "img/storify-pinterest-13.png",
    "img/storify-16.png",
    "js/support/jquery.js",
    "js/support/jquery.pm.js",
    "js/support/jquery.spin.js",
    "js/common.js",
    "js/main.js",
    "js/storify-hotkey.js",
    "js/storify-facebook.js",
    "js/storify-flickr.js",
    "js/storify-gplus.js",
    "js/storify-instagram.js",
    "js/storify-pinterest.js",
    "js/storify-reddit.js",
    "js/storify-topsy.js",
    "js/storify-twitter.js",
    "js/storify-youtube.js",
    "js/storify-fyre.js",
    "js/storify-disqus.js",
    "js/load.js",
    "iframe.html"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "js/support/jquery.js",
        "js/support/jquery.pm.js",
        "js/support/jquery.spin.js",
        "js/common.js",
        "js/storify-hotkey.js",
        "js/storify-facebook.js",
        "js/storify-flickr.js",
        "js/storify-gplus.js",
        "js/storify-instagram.js",
        "js/storify-pinterest.js",
        "js/storify-reddit.js",
        "js/storify-topsy.js",
        "js/storify-twitter.js",
        "js/storify-youtube.js",
        "js/storify-fyre.js",
        "js/storify-disqus.js",        
        "js/load.js"
      ]
    }
  ]
}

